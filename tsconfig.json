{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "module": "commonjs",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"]
}
